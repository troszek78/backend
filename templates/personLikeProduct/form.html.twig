{% block search %}
<div class="panel">
    {{ form_start(form, {'attr': {'id': form.vars.id }}) }}
        {% if heading is defined %}
            <div class="row">
                <div class="col-md-12">
                    <h4>{{ heading }}</h4>
                </div>
            </div>
        {% endif %}
        <div class="col-md-12">
            <div class="row">
                <div class="col-xs-6 col-lg-6">
                    <div class="form-group form-material floating" data-plugin="formMaterial">
                        {{ form_label(form.person_name) }} {{ form_widget(form.person_name) }}
                    </div>
                </div>
                {% if form.product_name is defined %}
                    <div class="col-xs-6 col-lg-6">
                        <div class="form-group form-material floating" data-plugin="formMaterial">
                            {{ form_label(form.product_name) }} {{ form_widget(form.product_name) }}
                        </div>
                    </div>
                {% endif %}
            </div>
            <div class="form-group">
                {{ form_widget(form.submit) }}
                {% if form.reset is defined %}
                    {{ form_widget(form.reset) }}
                {% endif %}
            </div>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}