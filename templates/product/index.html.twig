{% extends 'base.html.twig' %}

{% block title %}Product List{% endblock %}

{% block body %}
    {% block main %}
        <div class="row">
            <div class="col-md-6 col-xs-6">
                <h2 class="main-heading">
                    Product
                </h2>
            </div>
            <div class="col-md-6 col-xs-6 text-right">
                <a class="btn btn-success" href="{{ path('product_add') }}"> Add Product</a>
            </div>
        </div>
        {% include 'product/form.html.twig' with {'heading' : 'Search:'} %}
        {% include 'table.html.twig' with {'table' : table} %}
    {% endblock %}
    {% block sidebar %}
        <div class="row">
            <div class="col-md-12 col-xs-12">
                <a href="{{ path('product_add') }}" class="btn btn-lg btn-block btn-success">
                    Add Product
                </a>
            </div>
        </div>
    {% endblock %}
{% endblock %}