{% extends 'base.html.twig' %}

{% block title %} Product {{ product.name }}{% endblock %}

{% block body %}
    <div class="panel col-md-12 col-xs-12">
        <div class="row">
            <div class="col-md-6 col-xs-6">
                <h2 class="main-heading">
                    Product {{ product.name }}
                </h2>
            </div>
            <div class="col-md-6 col-xs-6 text-right">
                <a class="btn btn-primary" href="{{ path('product_edit', {'id' : product.id}) }}">Edit</a>
            </div>
        </div>
        <div class="panel col-md-12 col-xs-12">
            <div class="row">
                <div class="col-md-6 col-xs-6">
                    <div>
                        <label>Name</label>
                        <div class="element-content">
                            {{ product.name }}
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-xs-6">
                    <div>
                        <label>Product Date</label>
                        <div class="element-content">
                            {{ product.publicDate|date("m/d/Y") }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-xs-12">
                    <div>
                        <label>Info</label>
                        <div class="element-content">
                            {{ product.info }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
