{% block form %}
<div class="panel">
    {{ form_start(form, {'attr': {'id': form.vars.id }}) }}
        {% if heading is defined %}
            <div class="row">
                <div class="col-md-12">
                    <h4>Search:</h4>
                </div>
            </div>
        {% endif %}
        <div class="col-md-12">
            <div class="row">
                <div class="col-xs-6 col-lg-6">
                    <div class="form-group form-material floating" data-plugin="formMaterial">
                        {{ form_label(form.login) }} {{ form_widget(form.login) }}
                    </div>
                </div>
                <div class="col-xs-6 col-lg-6">
                    <div class="form-group form-material floating" data-plugin="formMaterial">
                        {{ form_label(form.l_name) }} {{ form_widget(form.l_name) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6 col-lg-6">
                    <div class="form-group form-material floating" data-plugin="formMaterial">
                        {{ form_label(form.f_name) }} {{ form_widget(form.f_name) }}
                    </div>
                </div>
                <div class="col-xs-6 col-lg-6">
                    <div class="form-group form-material floating" data-plugin="formMaterial">
                        {{ form_label(form.state) }} {{ form_widget(form.state) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                {{ form_widget(form.submit) }}
                {% if form.reset is defined %}
                    {{ form_widget(form.reset) }}
                {% endif %}
            </div>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}